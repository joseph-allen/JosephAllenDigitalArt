mainCol = #bada55
mainColLight = lighten(mainCol,50%)

darkMainCol = darken(mainCol,50%)
backgroundCol = darken(mainCol,85%)
JARed = #7F636E
JARedLight = lighten(JARed,50%)
JABlue = #55868C
JAYellow = #EEC584

body
  padding: 10px 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

a:hover
  text-decoration: none !important

.banner
  background-color: backgroundCol
  color: white
  margin: 15px 0px;

.background
  background-image: url("/images/Background.jpg")
  background-position: center
  height: 80vh
  background-size: cover

.menu
  list-style:none
  padding-left: 0px
  text-align:center
  li
    display:inline-block
    padding:5px
    font-size:24px
    color: mainCol !important
    -webkit-transition: color 0.2s
    transition: color 0.2s
    &:hover
      color: darkMainCol !important
      -webkit-transition: color 0.2s
      transition: color 0.2s
  p
    display: inline-block
    padding:5px
    font-size:24px
    color: darkMainCol

.lineSpace
  width:100%
  height:20px
  &:hover .line1
      height:20px
      -webkit-transition:  .2s ease-in-out 0.5s;
      transition: .2s ease-in-out 0.5s;
  &:hover .line2
    height:20px
    -webkit-transition:  .2s ease-in-out 0.8s;
    transition: .2s ease-in-out 0.8s;
  &:hover .line3
      height:20px
      -webkit-transition:  .2s ease-in-out 1.1s;
      transition: .2s ease-in-out 1.1s;
  &:hover .line4
      height:20px
      -webkit-transition:  .2s ease-in-out 1.4s;
      transition: .2s ease-in-out 1.4s;
  .line1
    width:20px
    height:10px
    background-color:JABlue
    position:absolute
    right:0px
    -webkit-transition:  .2s ease-in-out;
    transition: .2s ease-in-out;
  .line2
    width:40px
    height:10px
    background-color:JAYellow
    position:absolute
    right:20px
    -webkit-transition:  .2s ease-in-out;
    transition: .2s ease-in-out;
  .line3
    width:60px
    height:10px
    background-color:#bada55
    position:absolute
    right:60px
    -webkit-transition:  .2s ease-in-out;
    transition: .2s ease-in-out;
  .line4
    width:80px
    height:10px
    background-color:JARed
    position:absolute
    right:120px
    -webkit-transition:  .2s ease-in-out;
    transition: .2s ease-in-out;

.footer
  text-align: center
  margin-top: 20px
  span
    font-size: 32px
    margin: 0px 20px
    color: mainCol
    -webkit-transition: color 0.2s
    transition: color 0.2s
    &:hover
      color: darkMainCol
      -webkit-transition: color 0.2s
      transition: color 0.2s

.card
  background-color:mainColLight
  color:black
  text-align:center
  padding: 20px

.cardImg
  width:100%
  max-width:220px

.center
  text-align: center


 @media screen and (min-width: 600px)
    .menu
      text-align:left